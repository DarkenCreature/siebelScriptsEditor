{
	"name": "siebelscripteditor",
	"displayName": "Siebel Script Editor",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.62.0"
	},
	"categories": [
		"Other",
		"Snippets"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/endoit/siebelScriptsEditor"
	},
	"activationEvents": [
		"onCommand:siebelscripteditor.pullScript",
		"onCommand:siebelscripteditor.pushScript",
		"onView:extensionView"
	],
	"main": "./extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "siebelScriptEditor",
					"title": "Siebel Script Editor",
					"icon": "./media/icon.png"
				}
			]
		},
		"views": {
			"siebelScriptEditor": [
				{
					"type": "webview",
					"id": "extensionView",
					"name": "Select datasource"
				},
				{
					"id": "businessServices",
					"name": "Business Services"
				},
				{
					"id": "businessComponents",
					"name": "Business Components"
				},
				{
					"id": "applets",
					"name": "Applets"
				},
				{
					"id": "applications",
					"name": "Applications"
				}
			]
		},
		"commands": [
			{
				"command": "siebelscripteditor.pullScript",
				"title": "Get script from Siebel database",
				"icon": {
					"light": "./media/arrowdown.svg",
					"dark": "./media/arrowdown.svg"
				}
			},
			{
				"command": "siebelscripteditor.pushScript",
				"title": "Push script to Siebel database",
				"icon": {
					"light": "./media/arrowup.svg",
					"dark": "./media/arrowup.svg"
				}
			}
		],
		"menus": {
			"editor/title": [
				{
					"command": "siebelscripteditor.pullScript",
					"group": "navigation"
				},
				{
					"command": "siebelscripteditor.pushScript",
					"group": "navigation"
				}
			]
		},
		"configuration": {
			"title": "Siebel Script Editor",
			"properties": {
				"siebelScriptEditor.REST EndpointConfigurations": {
					"type": "array",
					"items": {
						"type": "string"
					},
					"description": "Parameteres for connection to Siebel REST API, use the following format: CUSTOMNAME/USERNAME/PASSWORD@SIEBELRESTENDPOINT, e.g. DEVENV/USERNAME/PASSWORD@https://devclient.devdomain.com/siebel/v1.0.\n Press the Reload button on the extension after editing configurations!"
				},
				"siebelScriptEditor.workspaces": {
					"type": "array",
					"items": {
						"type": "string"
					},
					"description": "Workspaces to use for the different connections, multiple can be given for each connection, use a colon after the connection, then the workspace names separated by commas, CUSTOMNAME:WORKSPACENAME1,WORKSPACENAME2, e.g. DEVENV:custom_dev_ws,other_dev_ws.\n Press the Reload button on the extension after editing configurations!"
				},
				"siebelScriptEditor.defaultConnection": {
					"type": "string",
					"description": "Use the 'Set as default' button in the extension to change it. Name of the default REST endpoint and workspace to use, in the following format: CUSTOMNAME@WORKSPACENAME, e.g. DEVENV:custom_dev_ws"
				}
			}
		},
		"snippets": [
			{
				"language": "javascript",
				"path": "./snippets.json"
			}
		]
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"dependencies": {
		"axios": "^0.27.2"
	},
	"devDependencies": {
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@types/vscode": "^1.62.0",
		"@vscode/test-electron": "^1.6.2",
		"eslint": "^8.1.0",
		"glob": "^7.1.7",
		"mocha": "^9.1.3",
		"oracledb": "^5.3.0",
		"typescript": "^4.4.4"
	}
}
